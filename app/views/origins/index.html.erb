<% content_for :top do %>
  <%= render :partial => "layouts/header" %>
  <%= render :partial => "layouts/logo" %>
<% end %>
<% content_for :bottom do  %>
  <h1>Rides coming from: <%= @origins.first.full_street_address %></h1>
  <table class = "table " id= 'ride-list'>
      <tr>
        <th> View</th>
        <th>Destination</th>
        <th>Date</th>
        <th>Offered By</th>
      </tr>
  <% @origins.each do |origin| %>
  <tr>
    <td><%= link_to "View",ride_path(origin.ride) %></td>
    <td><%= link_to origin.ride.destination.full_street_address, destinations_path( origin.ride.destination) %></td>
    <td><%= origin.ride.date%></td>
    <% if origin.ride.user.image.url %>
      <td id="image-icon"><%= link_to (image_tag origin.ride.user.image.url ), user_path(origin.ride.user)  %></p>
    <% end %>
  </tr>
  <% end %>
</table>
<% end %>
