<% content_for :top do %>
  <%= render :partial => "layouts/event_search" %>
<% end %>
<% content_for :bottom do  %>
<h1>Trending Events... </h1>
  <table class= "table " id= 'ride-list' >
      <tr>
        <th >Event</th>
        <th >City</th>
        <th >Date</th>
        <th >Visit</th>
        <th >Geda Ride</th>
      </tr>
        <% @events.each do |event| %>
        <tr >
          <td><%=  event.title %>
          <td><%= event.city%>
          <td><%= event.date %>
          <td><%=link_to image_tag(events), event.url, class: 'event-image', target: '_blank' %></td>
          <td id = 'click-event'><%= link_to 'GedaRide', destination_path(event.city) %></td>
        </tr>
        <% end %>
  </table>
<%end %>
