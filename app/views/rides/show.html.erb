<% content_for :top do %>
  <%= render :partial => "layouts/header" %>
  <%= render :partial => "layouts/logo" %>
<% end %>

<% content_for :bottom do  %>
  <div class = 'ride-show-container'>
    <div class = 'ride-show'>
      <h3>Offered by</h3>
      <p><%=link_to @ride.user.name, user_path(@ride.user) %></p>
      <p><%= link_to image_tag(asset_path( @ride.user.image.url)), user_path(@ride.user)  %></p>
      <h3>Starting</h3>
      <%=content_tag(:p, @ride.origin.full_street_address, id: "start")%>
      <h3>Ending</h3>
      <%=content_tag(:p, @ride.destination.full_street_address, id: "end")%>
      <h3>Date</h3>
      <p><%= @ride.date %></p>
    </div>
    <div id="route">
      <h3>Trip info</h3>
      <div id="directions-panel">
        <%= @ride.route %>
      </div>
      <div id="message-user">
        <%= link_to "Message User", new_conversation_path(recipient: @ride.user) %>
      </div>
    </div>
    <div id="map">
    </div>
  </div>
<% end %>
