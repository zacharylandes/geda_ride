<% content_for :header do  %>
  <%= render :partial => 'layouts/header' %>
<% end %>
<% content_for :top do  %>
  <div class="row ">
    <div class="col-md-8 col-md-offset-2 text-center " id="header-scroll inner">
      <div class ='logo'><%= link_to image_tag("https://s3-us-west-1.amazonaws.com/gedaride/mountain.png"), home_path%></div>
      <h1 class="animated fadeInDown">Geda<span id="ride">Ride</span>To The <span>Show</span></h1>
      <p class="animated fadeInUp delay-05s">Events near you</p>
        <div id="rows">
          <div class="col-md-6 col-md-offset-3 text-center">
            <div class="input-group mb-3">
                <%= form_tag(rides_path(:anchor => "bottom"), method: :get) do  %>
                  <p class="animated fadeInUp delay-05s origin">Location</p>
                  <%= text_field_tag :origin, nil, :required => true, placeholder: "origin", class:'form-control', id:"f_elem_city"   %>
                  <%= submit_tag "Get Shows", class: "search" %>
                <% end %>
            <div class="input-group-prepend">
              <div class="input-group mb-3">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
